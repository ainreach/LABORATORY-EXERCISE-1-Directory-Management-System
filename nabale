#include <iostream>
#include <string>
#include <vector>
#include <algorithm>

using namespace std;

void displayMenu() {
    cout << "MAIN MENU\n";
    cout << "1. Show Files\n";
    cout << "2. Make Directory\n";
    cout << "3. Switch Directory\n";
    cout << "4. Quit\n";
}

void showFiles(const string& currentDir) {
    cout << "Files in Current Directory: " << currentDir << "\n";
    cout << "file1.txt\nfiles2.cpp\nreport.doc\nimage.png\n";
    cout << "Press Enter to continue ...\n";
    cin.ignore().get();
}

void makeDirectory(const string& currentDir) {
    cout << "Enter Directory name: ";
    string dirName;
    cin >> dirName;
    cout << "Directory '" << dirName << "' created successfully in " << currentDir << "!\n";
    cout << "Press Enter to continue ...\n";
    cin.ignore().get();
}

void switchDirectory(string& currentDir) {
    cout << "Enter Directory name to move into: ";
    string dirName;
    cin >> dirName;
    currentDir = "C:\\Users\\UserName\\" + dirName;
    cout << "Current Directory: " << currentDir << "\n";
    cout << "Press Enter to continue... \n";
    cin.ignore().get();
}

int main() {
    string currentDir = "C:\\Users\\UserName\\";
    int option;

    while (true) {
        displayMenu();
        cout << "Enter choice: ";
        cin >> option;

        switch (option) {
        case 1:
            showFiles(currentDir);
            break;
        case 2:
            makeDirectory(currentDir);
            break;
        case 3:
            switchDirectory(currentDir);
            break;
        case 4:
            return 0;
        default:
            cout << "Invalid choice! Try again.\n";
        }
    }
}
